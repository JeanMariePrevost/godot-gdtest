{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Godot Tests",
      "type": "shell",
      "command": "${config:godotTools.editorPath.godot4}",
      "args": ["--headless", "-s", "res://src/gdtest/gdtest.gd"],
